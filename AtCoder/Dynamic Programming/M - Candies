#include <bits/stdc++.h>
using namespace std;

//Shortcut
#define fp(i, l, r)     for(i = l; i < r; i++)
#define ms(x, y)        memset(x, y, sizeof(x))
#define all(x)          x.begin(), x.end()
#define sc              second
#define fr              first
#define el              '\n'

using dd                = double;
using ll                = long long;
using ull               = unsigned long long;
using pii               = pair<int, int>;
using pll               = pair<ll, ll>;

// Global variabel
const int S = 1e5,
minf = INT_MIN, 
pinf = INT_MAX,
mod = 1e9 + 7;

// Fren -> Not, Equal, AND, OR
// ASCII 0 = 48, A = 65, a = 97

int main()
{
		std::ios::sync_with_stdio(false);
		std::cin.tie(nullptr); std::cout.tie(nullptr);
		
		int n, k, a, i, j;
		cin >> n >> k;	

		vector<int> dp(S + 1, 0), pre(S + 1, 0);
		dp[0] = 1;
		for(i = 1; i <= n; i++) {
			cin >> a;
			for(j = 1; j <= k + 1; j++) 
				pre[j] = (pre[j - 1] + dp[j - 1]) % mod;
			for(j = 1; j <= k; j++) {
				int l = max(0, j - a);
				dp[j] = (pre[j + 1] - pre[l] + mod) % mod;
			}
		}
		cout << dp[k] << el;
		return 0;
}
